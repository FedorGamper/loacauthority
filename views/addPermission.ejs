<!DOCTYPE html>
<html lang="en">

<head>
    <title>Add Permission</title>
    <% include head %>
</head>

<body>
<% var title = "addPermission" %>
<% include header %>
<main>


    <form name="token" method="POST" action="/addPermission">
        <h1>Create Permission</h1>


        <div class="group">
            <label for="username">User Name</label>
            <div class="select">
        <select id="username" name="username">
            <% users.forEach(user => { %>
                <%- "<option value" + user.username + ">" + user.username + "</option>" %>
            <% }); %>
        </select></div>
        </div>

        <div class="group">
            <label for="resource">Resource</label>
            <div class="select">
        <select id="resource" name="resource">
            <% resources.forEach(resource => { %>
                <%- "<option value" + resource.resourceName + ">" + resource.resourceName + "</option>" %>
            <% }); %>
        </select></div>
        </div>

        <div class="group">
            <label for="access">Access</label>
            <div class="select">
        <select id="access" name="access">
            <option>brew small coffee</option>
            <option>brew large coffee</option>
        </select></div>
        </div>

        <div class="group">
            <label for="from">Valid From</label>
            <input id="from" name="from" type="date" required/>
        </div>
        <div class="group">
            <label for="until">Valid Until</label>
        <input id="until" name="until" type="date" value="new Date()" required/>
        </div>

        <div class="group">
            <label for="delegatable">Delegatable</label>
            <div class="select">
        <select id="delegatable" name="delegable">
            <option value=0>false</option>
            <option value=1>true</option>
        </select></div>
        </div>

        <input type="submit" value="Save">
    </form>

</main>


</body>